<Application x:Class="app.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Определение цветовой схемы -->
        <SolidColorBrush x:Key="MainBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F4E8D3"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#67BA80"/>

        <!-- Определение шрифта -->
        <Style x:Key="MainTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        
    </Application.Resources>
</Application>